{
  "manifest_version": 3,
  "name": "Chrome SideBar",
  "version": "1.0.40",
  "description": "Bookmarks and Active Tabs in Side Panel",
  "permissions": [
    "sidePanel",
    "bookmarks",
    "tabs",
    "tabGroups",
    "storage",
    "favicon",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "Toggle Chrome SideBar",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "commands": {
    "_execute_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Toggle Side Panel"
    },
    "new-tab-in-group": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "New Tab in Active Group"
    }
  }
}
